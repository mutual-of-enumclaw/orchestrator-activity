{
    "name": "orchestrator-activity",
    "author": "Mutual of Enumclaw",
    "publisher": "Mutual of Enumclaw",
    "license": "LGPLv3",
    "version": "1.0.1",
    "description": "The orchestrator activity framework",
    "main": "handler.js",
    "scripts": {
        "prebuild": "npm run lt",
        "build": "npm run package",
        "postbuild": "mv .serverless/orchestrator-activity.zip ./",
        "test": "jest",
        "test:coverage": "npm test -- --coverage",
        "lint": "npx tslint -c tslint.json -p tsconfig.json",
        "lint:fix": "npx tslint -c tslint.json -p tsconfig.json --fix",
        "start": "./node_modules/.bin/serverless offline -s dev",
        "debug": "set SLS_DEBUG=* && node — inspect ./node_modules/serverless/bin/serverless offline -s dev",
        "lt": "npm run lint && npm run test:coverage",
        "package": "npx sls package",
        "deploy": "npx sls deploy"
    },
    "dependencies": {
        "@moe-tech/orchestrator": "^1.0.88",
        "aws-sdk": "^2.612.0",
        "epsagon": "1.17.3",
        "xml2js": "^0.4.23"
    },
    "devDependencies": {
        "@types/aws-lambda": "8.10.11",
        "@types/jest": "^23.3.14",
        "@types/node": "^8.10.59",
        "aws-sdk-mock": "^4.5.0",
        "hard-source-webpack-plugin": "^0.13.1",
        "jest": "^25.4.0",
        "jest-junit": "^7.0.0",
        "serverless": "2.4.0",
        "serverless-iam-roles-per-function": "^2.0.2",
        "serverless-plugin-generic-stack": "^1.0.2",
        "serverless-plugin-include-dependencies": "^3.2.1",
        "serverless-plugin-tracing": "^2.0.0",
        "serverless-pseudo-parameters": "^2.5.0",
        "serverless-webpack": "^5.3.1",
        "ts-jest": "^25.4.0",
        "ts-loader": "^6.2.1",
        "tslint": "^5.20.1",
        "typescript": "^3.7.5",
        "webpack": "^4.42.0",
        "webpack-node-externals": "^1.7.2"
    }
}
